%div.row
  - @articles.each do |a|
    %div.col-lg-4
      %h2= a.title
      %p= a.description

      %p
        %a.btn.btn-primary{:href => article_path(a), :role => "button"} Show
        - if admin_signed_in?
          %a.btn.btn-warning{:href => edit_article_path(a), :role => "button"} Edit
          = link_to "Destroy", a, :method=>:delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?' }
